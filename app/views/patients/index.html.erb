<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<table>
  <thead>
    <tr>
      <th>Gender</th>
      <th>Age</th>
      <th>Weight</th>
      <th>Bp</th>
      <th>Pulse</th>
      <th>Temp</th>
      <th>Rr</th>
      <th>Time</th>
      <th>Minutes</th>
      <th>Houres</th>
      <th>Days</th>
      <th>Weeks</th>
      <th>Months</th>
      <th>Main view</th>
      <th>Lab view</th>
      <th>Document view</th>
      <th>Order view</th>
      <th>Radiology view</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.gender %></td>
        <td><%= patient.age %></td>
        <td><%= patient.weight %></td>
        <td><%= patient.bp %></td>
        <td><%= patient.pulse %></td>
        <td><%= patient.temp %></td>
        <td><%= patient.rr %></td>
        <td><%= patient.time %></td>
        <td><%= patient.minutes %></td>
        <td><%= patient.houres %></td>
        <td><%= patient.days %></td>
        <td><%= patient.weeks %></td>
        <td><%= patient.months %></td>
        <td><%= patient.main_view %></td>
        <td><%= patient.lab_view %></td>
        <td><%= patient.document_view %></td>
        <td><%= patient.order_view %></td>
        <td><%= patient.radiology_view %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

